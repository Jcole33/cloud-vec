{
    "compilerOptions": {
      "allowSyntheticDefaultImports": true,
      "lib": ["dom", "esnext"],
      "module": "ES2015",
      "target": "ES2019",
      "strict": true,
      "moduleResolution": "node",
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "outDir": "./src",
      "baseUrl": "./",
      "rootDir": "./lib",
      "paths": {
        "src": ["./lib"]
      },
      "esModuleInterop": true
    },
    "include": ["./lib/*.json", "./lib/*"]
  }